{
  "name": "@maveio/components",
  "version": "0.0.13",
  "description": "privacy friendly (ðŸ‡ªðŸ‡º), iframe-less, video UI elements for videos hosted on mave.io",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "ts-types": "tsc",
    "build": "./node_modules/.bin/tsup",
    "build:watch": "./node_modules/.bin/tsup --watch",
    "build:prod": "NODE_ENV=production npm run build",
    "localize": "./node_modules/.bin/lit-localize extract && ./node_modules/.bin/lit-localize build",
    "prepublishOnly": "npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint:fix": "eslint ./src --ext .ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{ts,tsx,css,md,json}\" ",
    "lint": "yarn lint:format && yarn lint:fix"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maveio/components.git"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.6.9",
    "@types/jest": "^29.4.0",
    "@types/phoenix": "^1.5.5",
    "@types/react": "^18.0.31",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "dotenv": "^16.0.3",
    "esbuild-plugin-replace": "^1.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "author": "mave.io",
  "license": "APGL-3.0",
  "compilerOptions": {
    "types": [
      "jest"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  },
  "bugs": {
    "url": "https://github.com/maveio/components/issues"
  },
  "homepage": "https://github.com/maveio/components#readme",
  "dependencies": {
    "@lit-labs/observers": "^1.1.0",
    "@lit-labs/react": "^1.1.1",
    "@lit-labs/task": "^2.0.0",
    "@lit/localize": "^0.11.4",
    "@lottiefiles/lottie-player": "^1.7.1",
    "@maveio/metrics": "^0.0.6",
    "hls.js": "v1.4.0-rc.1",
    "lit": "^2.6.1",
    "media-chrome": "^1.0.0",
    "phoenix": "^1.7.1",
    "react": "^18.2.0",
    "tus-js-client": "^3.1.0"
  }
}
